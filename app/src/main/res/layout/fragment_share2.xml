<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yakuza.animation.ShareActivity2Fragment">
    <View android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topSlide"
        android:layout_above="@+id/botSlide"
        android:background="#0b0b0b" />


    <View
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:src="@android:drawable/btn_star"
        android:id="@+id/botSlide"
        android:layout_alignEnd="@+id/topSlide"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="#6557ff" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:transitionName="xyz"
        android:src="@android:drawable/btn_star"
        android:id="@+id/imageBig"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
